<%= form_for(@tweet, html: { multipart: true }) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
      <%= f.text_area :content, placeholder: 'Compose new tweet...' %>
    </div>
    <%= f.submit 'Post', class: 'btn btn-primary' %>
    <span class="picture">
      <%= f.file_field :picture %>
    </span>
<% end %>
